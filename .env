APP_ENV=development
APP_NAME=PersonalKnowledgeAnalyst
LOG_LEVEL=INFO

# Deterministic inference settings
OLLAMA_BASE_URL=http://localhost:11435
OLLAMA_CHAT_MODEL=qwen2.5:3b-instruct
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_TIMEOUT_SECONDS=180
OLLAMA_NUM_PREDICT=256
OLLAMA_KEEP_ALIVE=30m
LLM_TEMPERATURE=0.0
LLM_SEED=42

# Storage paths
KNOWLEDGE_NOTES_DIR=~/KnowledgeBase/notes
KNOWLEDGE_PDFS_DIR=~/KnowledgeBase/pdfs
KNOWLEDGE_EMAILS_DIR=~/KnowledgeBase/exports/emails

# Database configuration
DATABASE_URL=postgresql+psycopg://pka:pka@localhost:5432/pka
VECTOR_DIM=768

# Index paths
BM25_INDEX_PATH=.indices/bm25

# Feature flags
ENABLE_RERANKER=false
STRICT_MODE=false
